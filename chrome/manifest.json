{
  "manifest_version": 2,

  "name": "Kremlin Block",
  "description": "Extension to block Russian tracking codes in webpages!",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {

    "default_icon": {
      "19": "img/trident-e-19.png",
      "38": "img/trident-e-38.png"
    },

    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/trident-e-16.png",
    "48": "img/trident-e-48.png",
    "128": "img/trident-e-128.png"
  },
  "permissions": [
    "http://*/*", "https://*/*", "contextMenus", "tabs", "idle", "webRequest", "webRequestBlocking", "webNavigation", "alarms"
  ]
}
